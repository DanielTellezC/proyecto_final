            <li class="navbar_link"><a href="/logout">Cerrar Sesión</a></li>
            
        </ul>
        
    </div>
    <% } %>
<!--Mensaje de error de signup para ver si ya se encuentra registrado el ususario -->
    <% if(signupMensaje.length > 0){ %>
        <div class="mensaje_signup"><b><%= signupMensaje %></b></div>
    <% } %>

    <% if(signinMensaje.length > 0){ %>
        <div class="mensaje_signin"><b><%= signinMensaje %></b></div>
    <% } %>

    <%- body %>
        
<script src="javaScript/navbar.js"></script>
