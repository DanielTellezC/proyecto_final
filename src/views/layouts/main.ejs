<body>

    <!-- Menú que se muestra para los usuarios que no están autenticados -->
    <% if(!user) { %> 
    <div class="content_navbar">
        <ul>
            <li class="navbar_logo">Logo</li>
            <li class="navbar_menu"><span class="material-symbols-outlined">menu</span></a></li>
            <li class="navbar_link"><a href="/signin">Sign in</a></li>
            <li class="navbar_link"><a href="/signup">Sign up</a></li>
        </ul>
    </div>

    <% } %>

    <!-- Menú que se muestra para los usuarios administrador -->
    <% if(user){ %>
    <div class="content_navbar">
        <ul>
            <li class="navbar_logo"><a href="/">Logo</a></li>
            <li class="navbar_menu"><a href=""><span class="material-symbols-outlined">menu</span></a></li>
