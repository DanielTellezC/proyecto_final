<%- layout('layouts/main.ejs') %>        

<div class="formulario">
    <form action="/signup" method="post">
        <header><h3 class="titulo_form">Sign up</h3></header>
        <div class="contenedor_form">
            <label for="correo">Email: </label>
            <input id="correo" type="email" name="email" placeholder="Inserta tu email" required>
        </div>
    
        <div class="contenedor_form">
            <label for="password">Contraseña:</label>
            <input  id="password" type="password" name="password" placeholder="Constraseña" required>
        </div class="input_form">
        
        <div class="contenedor_form">
            <label for="name">Nombre:</label>
            <input id="nombre" type="text" name="name" placeholder="Nombre de usuario" required>
        </div>
        
        <div class="contenedor_form">
            <label for="phone">Teléfono:</label>
            <input id="phone" type="text" name="phone" placeholder="Número de teléfono" required>
        </div>
        <div class="contenedor_form">
            <select name="cuenta" id="">
                <option value="Administrador">Administrador</option>
                <option value="Usuario">Usuario</option>
            </select>
        </div>
        
        <div class="contenedor_submit_form">
            <button type="submit">
                Registro
            </button>
        </div>
        
    </form>
</div>
